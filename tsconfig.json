{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],

    "jsx": "react-jsx",

    "isolatedModules": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "skipLibCheck": true,

    "types": ["vite/client"],

    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
